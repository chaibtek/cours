{% extends 'base.html.twig' %}

{% block title %}Hello CategoryController!{% endblock %}

{% block body %}
<style>
    .example-wrapper {
        margin: 1em auto;
        max-width: 800px;
        width: 95%;
        font: 18px/1.5 sans-serif;
    }
    .example-wrapper code {
        background: #F5F5F5;
        padding: 2px 6px;
    }
</style>

<div class="container">

    <table class="table">
        <tr>
            <th>Nom</th>
            <th>Prix</th>
            <th>Editer</th>
            <th>Effacer</th>
        </tr>
        {% for produit in listeProduct %}
        <tr>
            <td>
                  {{produit.name}} </td>
            <td>{{produit.price}}</td>
            <td><a href="{{path('editProduct',{'id':produit.id})}}">
                    Editer Produit</a>
            </td>
            <td><a href="{{path('deleteProduct',{'id':produit.id})}}">
                    Effacer Produit</a></td>
        </tr>

        <br>

        {% endfor  %}
    </table>


</div>
{% endblock %}