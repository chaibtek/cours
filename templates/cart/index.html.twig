{% extends 'base.html.twig' %}

{% block title %}Hello CartController!
{% endblock %}

{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>

	<div
		class="container">
		{# {{ dump(cart) }} #}
		<table class="table" style="border:1px black">
			<thead>
				<td>Image</td>
				<td>Nom</td>
				<td>Prix</td>
				<td>Quantité</td>
				<td>Sous-total</td>
			</thead>
			{% set total = 0 %}
			{% for item in cart %}
				<tr style="border:1px black">
					<td><img class="" src="/img/{{item.produit.img}}" alt="Dét" width="100"></td>
					<td>{{item.produit.name}}</td>
					<td>{{item.produit.price / 100}}€</td>
					<td>{{item.quantite}}</td>
					<td>
						{% set sousTotal = (item.produit.price / 100) * item.quantite %}
						{{ sousTotal ~'€'}}</td>
					{% set total = total + sousTotal %}
				</tr>
			{% endfor %}
			<tr>
				<td></td>
				<td></td>
				<td></td>
				<td>
					<strong>Total</strong>
				</td>
				<td>
					<strong>
						{{ total ~'€' }}</strong>
				</td>
			</tr>
		</table>

	</div>
{% endblock %}
